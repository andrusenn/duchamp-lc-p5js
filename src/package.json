{
      "name": "leparc-lc",
      "author": {
            "name": "Andres Senn",
            "email": "hola@andressenn.com"
      },
      "license": "MIT",
      "homepage": "http://andressenn.com",
      "version": "0.2.0",
      "description": "p5 livecoding",
      "repository": {
            "type": "git",
            "url": "https://github.com/andrusenn/leparc-lc-p5js.git"
      },
      "main": "main.js",
      "scripts": {
            "start": "electron .",
            "dist-win": "electron-builder --win",
            "dist-linux": "electron-builder --linux",
            "dist-mac": "electron-builder --mac",
            "dist-all": "electron-builder -mwl"
      },
      "keywords": [
            "livecoding",
            "p5js",
            "processing"
      ],
      "build": {
            "appId": "andrusenn.leparc",
            "productName": "LeParc-LC",
            "files": [
                  "!**/libs/p5/{p5.js,p5.sound.js,p5.dom.js}",
                  "!**/leparc_resources/{config,media,save}",
                  "!**/leparc_resources/snippets/{gpu,tnoise,toxi,loadvideos,varios}",
                  "!**/css/{index.css,index.css.map,index.min.css.map,index.scss}"
            ],
            "directories": {
                  "output": "../dist"
            },
            "win": {
                  "target": "zip",
                  "icon": "assets/icon.ico"
            },
            "linux": {
                  "target": [
                        {
                              "target": "AppImage",
                              "arch": [
                                    "x64",
                                    "armv7l",
                                    "arm64"
                              ]
                        }
                  ],
                  "icon": "assets/icon.png"
            },
            "mac": {
                  "target": "zip",
                  "icon": "assets/icon.icns"
            }
      },
      "devDependencies": {
            "electron": "^4.1.2",
            "electron-builder": "^20.43.0"
      },
      "dependencies": {
            "express": "^4.16.4",
            "fs-extra": "^7.0.1",
            "i18next": "^15.0.8",
            "ip": "^1.1.5",
            "js-beautify": "^1.9.0",
            "socket.io": "^2.2.0"
      }
}
